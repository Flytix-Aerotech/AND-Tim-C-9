<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.home.BiodataPenumpang"
    android:padding="20dp"
    android:background="@drawable/bg_polos">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_biodataPenumpang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_biodata_penumpang"
        />

    <Button
        android:id="@+id/btn_biodataPenumpang"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/gold"
        android:text="LANJUT PILIH KURSI" />



</RelativeLayout>