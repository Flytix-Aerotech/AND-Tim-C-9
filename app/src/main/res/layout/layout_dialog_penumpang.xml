<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/passLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bguniversal">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_closedialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/emas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.Toolbar>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_closedialog"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_penumpang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgAdult"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_dewasa" />

                    <LinearLayout
                        android:id="@+id/layoutdewasa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/imgAdult"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gothambold"
                            android:gravity="top"
                            android:lineSpacingExtra="-1sp"
                            android:text="Dewasa"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gothambold"
                            android:lineSpacingExtra="0sp"
                            android:text="(12 tahun keatas)"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imb_kurangdewasa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="40dp"
                            android:minHeight="40dp"
                            android:src="@drawable/ic_minbox"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/tv_jumlahpenumpangdewasa"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/gothambold"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@+id/img_tambahDewasa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="40dp"
                            android:minHeight="40dp"
                            android:src="@drawable/ic_addbox"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/gridTop2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#D0D0D0"
                    app:layout_constraintTop_toBottomOf="@id/btnClose" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/img_anak"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_anak" />

                    <LinearLayout
                        android:id="@+id/layoutAnak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/img_anak"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gothambold"
                            android:gravity="top"
                            android:lineSpacingExtra="-1sp"
                            android:text="Anak"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gothambold"
                            android:lineSpacingExtra="0sp"
                            android:text="(2-11 tahun)"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imb_kurangAnak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="40dp"
                            android:minHeight="40dp"
                            android:src="@drawable/ic_minbox"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/tv_jumlahpenumpanganak"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/gothambold"
                            android:text="0"

                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@+id/imb_tambahAnak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:minWidth="40dp"
                            android:minHeight="40dp"
                            android:src="@drawable/ic_addbox"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/gridTop3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#D0D0D0"
                    app:layout_constraintTop_toBottomOf="@id/btnClose" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/iv_bayi"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_anak" />

                    <LinearLayout
                        android:id="@+id/layoutBaby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/iv_bayi"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gothambold"
                            android:gravity="top"
                            android:lineSpacingExtra="-1sp"
                            android:text="Bayi"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gothambold"
                            android:lineSpacingExtra="0sp"
                            android:text="(Dibawah 2 tahun)"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imb_kurangBayi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:minWidth="40dp"
                            android:minHeight="40dp"
                            android:src="@drawable/ic_minbox"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/tv_jumlahpenumpangbayi"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/gothambold"
                            android:text="0"

                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@+id/imb_tambahBayi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:minWidth="40dp"
                            android:minHeight="40dp"
                            android:src="@drawable/ic_addbox"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/gridTop4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#D0D0D0"
                    app:layout_constraintTop_toBottomOf="@id/btnClose" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnsimpanpenumpang"
                style="@style/btngold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_penumpang"
                android:layout_margin="10dp"
                android:fontFamily="@font/gothambold"
                android:lineHeight="24dp"
                android:text="Simpan"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp" />
        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>