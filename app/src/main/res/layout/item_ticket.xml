<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="382dp"
            android:layout_height="193dp">


            <TextView
                android:id="@+id/waktu_berangkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tempat_berangkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/waktu_berangkat"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/waktu_sampai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="58dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/waktu_berangkat"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tempat_tujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/waktu_sampai"
                android:layout_marginStart="65dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/tempat_berangkat"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="50dp"
                android:text="TextView"
                android:textColor="@color/gold"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tempat_berangkat"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="49dp"
                app:srcCompat="@drawable/img" />

            <TextView
                android:id="@+id/jenis_pesawat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tempat_tujuan"
                android:layout_marginStart="23dp"
                android:layout_marginTop="49dp"
                android:layout_toEndOf="@+id/Logo"
                android:text="TextView"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/jenis_kelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tempat_tujuan"
                android:layout_marginStart="36dp"
                android:layout_marginTop="49dp"
                android:layout_toEndOf="@+id/jenis_pesawat"
                android:text="TextView"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/logo_koper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jenis_pesawat"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/Logo"
                app:srcCompat="@drawable/img_1" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>