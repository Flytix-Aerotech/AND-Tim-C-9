<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bguniversal"
    tools:context=".view.home.search.BeforeCheckout">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_judulpenerbangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_asal"
                style="@style/textheading20bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/gothambold"
                android:text="Jakarta"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_below="@id/cv_judulpenerbangan"
        android:layout_height="wrap_content"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black"
        android:layout_marginHorizontal="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/putih"
            android:padding="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_biodatapemesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_Keberangkatan"
                        style="@style/textheading20bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gothambold"
                        android:text="Keberangkatan"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_jamkeberangkatan"
                        style="@style/textheading20bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gothambold"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:id="@+id/tv_tanggalKeberangkatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_Keberangkatan"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_bandaraAsal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_tanggalKeberangkatan"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_terminalbandara"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_tanggalKeberangkatan"
                        android:layout_toRightOf="@id/tv_bandaraAsal"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_kapasitasPesawat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_bandaraAsal"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="2dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:id="@+id/tv_jenisPesawat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:fontFamily="@font/gothambold"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/tv_kelaspesawat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tv_jenisPesawat"
                                android:fontFamily="@font/gothambold"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/tv_kodePesawat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_jenisPesawat"
                                android:layout_marginLeft="30dp"
                                android:fontFamily="@font/gothambold"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_below="@id/tv_kodePesawat"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/img" />

                            <TextView
                                android:id="@+id/tv_informasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_kodePesawat"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20sp"
                                android:fontFamily="@font/gothambold"
                                android:text="Informasi: "
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/tv_baggage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_informasi"
                                android:layout_marginLeft="30dp"
                                android:text="Baggage 20 kg"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/tv_cabin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_baggage"
                                android:layout_marginLeft="30dp"
                                android:text="Cabin baggage 7 Kg"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/tv_inFlight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_cabin"
                                android:layout_marginLeft="30dp"
                                android:text="In Flight Entertainment"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />

                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tv_jamKedatangan"
                        style="@style/textheading20bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cv_kapasitasPesawat"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gothambold"
                        android:text="Tiba"
                        android:textColor="@color/gold"
                        tools:ignore="HardcodedText" />


                    <TextView
                        android:id="@+id/tv_tanggalKedatangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_jamKedatangan"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_bandaraKedatangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_tanggalKedatangan"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_kedatangan"
                        style="@style/textheading20bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cv_kapasitasPesawat"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gothambold"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!--        //Rincian Harga//  -->
            <LinearLayout
                android:id="@+id/layoutrincianharga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_biodatapemesan"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rincian Harga"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/txtAdult"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2 Adults"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/priceadult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDR 9.550.000"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/txtBaby"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1 Baby"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/pricebaby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDR 0"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/txtKids"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kids"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/pricekids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDR 300.000"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tax"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/priceTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDR 0"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/putih"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/LayoutTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_total"
                    style="@style/textheading20bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gothambold"
                    android:text="Total"

                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_totalPembayaran"
                    style="@style/textheading20bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gothambold"
                    android:textColor="@color/gold"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_lanjutpembayaran"
                style="@style/btngold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambold"
                android:lineHeight="24dp"
                android:text="Lanjut Pembayaran"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>