<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bguniversal"
    tools:context=".view.home.search.DetailRt">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_judulpenerbangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_asal"
                style="@style/textheading20bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/gothambold"
                android:text="Jakarta"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:id="@+id/Layoutdetailticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_judulpenerbangan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LayouttiketKeberangkatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_biodatapemesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_judulpenerbangan"
                    android:layout_marginHorizontal="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="2dp">

                    <RelativeLayout
                        android:id="@+id/layoutTicketKeberangkatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_Keberangkatan"
                            style="@style/textheading20bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/gothambold"
                            android:text="Keberangkatan"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_jamkeberangkatan"
                            style="@style/textheading20bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/gothambold"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/tv_tanggalKeberangkatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_Keberangkatan"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_bandaraAsal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_tanggalKeberangkatan"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_terminalbandara"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_tanggalKeberangkatan"
                            android:layout_toRightOf="@id/tv_bandaraAsal"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_kapasitasPesawat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_bandaraAsal"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="2dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                tools:ignore="RtlHardcoded">

                                <TextView
                                    android:id="@+id/tv_jenisPesawat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:fontFamily="@font/gothambold"
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_kelaspesawat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/tv_jenisPesawat"
                                    android:fontFamily="@font/gothambold"
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_kodePesawat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_jenisPesawat"
                                    android:layout_marginLeft="30dp"
                                    android:fontFamily="@font/gothambold"
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_below="@id/tv_kodePesawat"
                                    android:layout_marginTop="20dp"
                                    android:src="@drawable/img" />

                                <TextView
                                    android:id="@+id/tv_informasi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_kodePesawat"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="20sp"
                                    android:fontFamily="@font/gothambold"
                                    android:text="Informasi: "
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_baggage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_informasi"
                                    android:layout_marginLeft="30dp"
                                    android:text="Baggage 20 kg"
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_cabin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_baggage"
                                    android:layout_marginLeft="30dp"
                                    android:text="Cabin baggage 7 Kg"
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_inFlight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_cabin"
                                    android:layout_marginLeft="30dp"
                                    android:text="In Flight Entertainment"
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                            </RelativeLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_jamKedatangan"
                            style="@style/textheading20bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cv_kapasitasPesawat"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/gothambold"
                            android:text="Tiba"
                            android:textColor="@color/gold"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:id="@+id/tv_tanggalKedatangan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_jamKedatangan"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_bandaraKedatangan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_tanggalKedatangan"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_kedatangan"
                            style="@style/textheading20bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cv_kapasitasPesawat"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/gothambold"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText,RtlHardcoded" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_judulpenerbanganKep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_asalKepulangan"
                            style="@style/textheading20bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="@font/gothambold"
                            android:text="Bandung"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/LayouttiketKepulangan"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_biodatapemesankepulangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_judulpenerbangan"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="2dp">

                    <RelativeLayout
                        android:id="@+id/layoutTicketKepulangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_Kepulangan"
                            style="@style/textheading20bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/gothambold"
                            android:text="Kepulangan"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_jamkepulangan"
                            style="@style/textheading20bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/gothambold"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/tv_tanggalKepulangan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_Kepulangan"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_bandaraAsalkepulangan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_tanggalKepulangan"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_terminalbandarakepulangan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_tanggalKepulangan"
                            android:layout_toRightOf="@id/tv_bandaraAsalkepulangan"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_kapasitasPesawatkepulangan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_bandaraAsalkepulangan"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="2dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                tools:ignore="RtlHardcoded">

                                <TextView
                                    android:id="@+id/tv_jenisPesawatkepulangan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:fontFamily="@font/gothambold"
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_kelaspesawatkepulangan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/tv_jenisPesawatkepulangan"
                                    android:fontFamily="@font/gothambold"
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_kodePesawatkepulangan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_jenisPesawatkepulangan"
                                    android:layout_marginLeft="30dp"
                                    android:fontFamily="@font/gothambold"
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_below="@id/tv_kodePesawatkepulangan"
                                    android:layout_marginTop="20dp"
                                    android:src="@drawable/img" />

                                <TextView
                                    android:id="@+id/tv_informasikepulangan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_kodePesawatkepulangan"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="20sp"
                                    android:fontFamily="@font/gothambold"
                                    android:text="Informasi: "
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_baggagekepulangan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_informasikepulangan"
                                    android:layout_marginLeft="30dp"
                                    android:text="Baggage 20 kg"
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_cabinkepulangan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_baggagekepulangan"
                                    android:layout_marginLeft="30dp"
                                    android:text="Cabin baggage 7 Kg"
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_inFlightkepulangan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_cabinkepulangan"
                                    android:layout_marginLeft="30dp"
                                    android:text="In Flight Entertainment"
                                    android:textColor="@color/black"
                                    tools:ignore="HardcodedText" />

                            </RelativeLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_jamKedatangankepulangan"
                            style="@style/textheading20bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cv_kapasitasPesawatkepulangan"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/gothambold"
                            android:text="Tiba"
                            android:textColor="@color/gold"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:id="@+id/tv_tanggalKedatangankepulangan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_jamKedatangankepulangan"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_bandaraKedatangankepulangan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_tanggalKedatangankepulangan"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_kedatangankepulangan"
                            style="@style/textheading20bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cv_kapasitasPesawatkepulangan"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/gothambold"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText,RtlHardcoded" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/putih"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/LayoutTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_total"
                    style="@style/textheading20bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gothambold"
                    android:text="Total"

                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_totalPembayaran"
                    style="@style/textheading20bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gothambold"
                    android:textColor="@color/gold"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_booking"
                style="@style/btngold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambold"
                android:lineHeight="24dp"
                android:text="Lanjut"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>